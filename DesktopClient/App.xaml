    <Application x:Class="DesktopClient.App"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:local="clr-namespace:DesktopClient"
                xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                 StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- все шаблоны контролов (в т.ч. TextBox/PasswordBox/ComboBox) -->
                <ResourceDictionary
                    Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml"/>

                <!-- выбор светлой/тёмной темы и цветов -->
                <md:BundledTheme BaseTheme="Light"
                                 PrimaryColor="DeepPurple"
                                 SecondaryColor="Lime"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
