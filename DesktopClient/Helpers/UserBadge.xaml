<UserControl x:Class="DesktopClient.Helpers.UserBadge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopClient.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">

    <Grid Grid.Row="0" Background="#FFF7F7F7"  Margin="8" MinHeight="48">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock FontWeight="SemiBold" Grid.Row="0"
                   Text="{Binding CurrentUser.FullName, Source={StaticResource CurrentUser}, FallbackValue=Гость}"/>
        <TextBlock FontSize="12" Grid.Row="1"
     Text="{Binding CurrentUser.Post,  Source={StaticResource CurrentUser}}"/>
    </Grid>
</UserControl>
