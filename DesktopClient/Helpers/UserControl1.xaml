<UserControl x:Class="DesktopClient.Helpers.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopClient.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="BaseLabel" TargetType="TextBlock">
            <Setter Property="Margin" Value="10 5 10 5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ValueLabel" TargetType="TextBlock">
            <Setter Property="Margin" Value="10 10 10 10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Border Background="#FFF7F7F7"
            CornerRadius="14"
            BorderBrush="#FFBCBFC3"
            BorderThickness="1"
            Width="300"
            Height="260"
            Padding="8">
        <Grid>
            <!-- 4 строки: шапка, иконки, веса, кнопка -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <!-- даём «весу» занять остаток -->
                <RowDefinition Height="Auto"/>
                <!-- кнопка -->
            </Grid.RowDefinitions>

            <!-- Шапка дата и время -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="4">
                <TextBlock Text="{Binding StartTime, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}, TargetNullValue=—}" Style="{StaticResource ValueLabel}"/>
                <TextBlock Text="—" Style="{StaticResource BaseLabel}" FontSize="12" FontWeight="Bold"/>
                <TextBlock Text="{Binding StopTime, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}, TargetNullValue=—}" Style="{StaticResource ValueLabel}"/>
            </StackPanel>

            <!-- Информация о перегоне -->
            <Grid Grid.Row="1" Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Docs/Images/Silo.png" Height="35" Width="35"/>
                    <TextBlock Text="{Binding SourceSilo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource ValueLabel}" TextAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Docs/Images/Arrow.png" Height="35" Width="35"/>
                    <TextBlock Text="{Binding Direction, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource ValueLabel}" TextAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Docs/Images/MillIcon.png" Height="35" Width="35"/>
                    <ComboBox ItemsSource="{Binding TargetSilos}" SelectedItem="{Binding SelectedSilo}" FontSize="14" Width="60" Height="20" Margin="10 10 10 10"/>
                </StackPanel>
            </Grid>

            <!-- Информация о весе -->
            <Grid Grid.Row="2" Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Итог весы 1" Style="{StaticResource BaseLabel}"/>
                    <TextBlock Text="{Binding Weight1, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource ValueLabel}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBlock Text="Итог весы 2" Style="{StaticResource BaseLabel}"/>
                    <TextBlock Text="{Binding Weight2, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource ValueLabel}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical">
                    <TextBlock Text="Итого" Style="{StaticResource BaseLabel}"/>
                    <TextBlock Text="{Binding MainWeight, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource ValueLabel}"/>
                </StackPanel>
            </Grid>

            <!-- Кнопка: справа снизу -->
            <Button Grid.Row="3"
                    Content="Сохранить"
                    Width="110" Height="32"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,5,8,5"
                    Padding="12,4"
                    Foreground="White" Style="{StaticResource BaseButton}"/>

            <TextBlock Grid.Row="3" Text="{Binding Status}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,5,0,5"/>
        </Grid>
    </Border>
</UserControl>
