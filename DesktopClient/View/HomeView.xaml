<UserControl x:Class="DesktopClient.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopClient.View"
             xmlns:vm="clr-namespace:DesktopClient.VM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:HomeCardVM, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <Style x:Key="BaseLabel" TargetType="TextBlock">
            <Setter Property="Margin" Value="10 10 10 10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="ValueLabel" TargetType="TextBlock">
            <Setter Property="Margin" Value="10 10 10 10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Карточка c данными по завершенному циклу перегона зерна -->
        <DataTemplate DataType="{x:Type vm:HomeCardVM}">
            <Border Background="#FFF7F7F7" CornerRadius="14" BorderBrush="#FFBCBFC3" BorderThickness="1" Width="300" Height="220">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Шапка дата и время -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5 5 5 5">
                        <TextBlock Text="{Binding StartTime, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}, 
                        TargetNullValue=—}" Style="{StaticResource ValueLabel}"/>
                        <TextBlock Text="—" Style="{StaticResource BaseLabel}" FontSize="12" FontWeight="Bold"/>
                        <TextBlock Text="{Binding StopTime, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}, 
                        TargetNullValue=—}" Style="{StaticResource ValueLabel}"/>
                    </StackPanel>
                    <!-- Информация о перегоне -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="5 5 5 5" Orientation="Vertical">
                            <Image Source="/Docs/Images/Silo.png" Height="35" Width="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SourceSilo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource ValueLabel}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5 5 5 5" Orientation="Vertical">
                            <Image Source="/Docs/Images/Arrow.png" Height="35" Width="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Direction, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource ValueLabel}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="5 5 5 5" Orientation="Vertical">
                            <Image Source="/Docs/Images/MillIcon.png" Height="35" Width="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TargetSilo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource ValueLabel}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    <!-- Информация о весе пройденного зерна за транзакцию -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5 5 5 5">
                            <TextBlock Text="Итог весы 1" Style="{StaticResource BaseLabel}"/>
                            <TextBlock Text="{Binding Weight1, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource ValueLabel}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5 5 5 5">
                            <TextBlock Text="Итог весы 2" Style="{StaticResource BaseLabel}"/>
                            <TextBlock Text="{Binding Weight2, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource ValueLabel}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Vertical" Margin="5 5 5 5">
                            <TextBlock Text="Итого" Style="{StaticResource BaseLabel}"/>
                            <TextBlock Text="{Binding MainWeight, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource ValueLabel}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    </Grid>
</UserControl>
    