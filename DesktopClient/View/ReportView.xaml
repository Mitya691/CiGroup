<UserControl x:Class="DesktopClient.View.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopClient.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Cursor="" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Прокладка -->
            <RowDefinition Height="Auto"/>
            <!-- Фильтр -->
            <RowDefinition Height="*"/>
            <!-- Плитки -->
        </Grid.RowDefinitions>

        <!-- Header: навигация -->
        <Grid Grid.Row="0" Background="White" Height="48" Cursor="" Margin="0 20 0 0 ">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <!-- Бейдж -->
                <ColumnDefinition Width="*"/>
                <!-- Левый наполнитель -->
                <ColumnDefinition Width="Auto"/>
                <!-- Кнопки (центр) -->
                <ColumnDefinition Width="*"/>
                <!-- Правый наполнитель -->
                <ColumnDefinition Width="Auto"/>
                <!-- Лого -->
            </Grid.ColumnDefinitions>

            <!-- ЛЕВО: Бейдж пользователя (иконка + ФИО) -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20 0 0 0" >
                <Image Source="/Docs/Images/User.png" Margin="10" />
                <Border Padding="8,6" CornerRadius="8" Background="#10000000" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold"
                   Text="{Binding CurrentUser.FullName, Source={StaticResource CurrentUser}, FallbackValue=Гость}"/>
                        <TextBlock FontSize="12" Opacity="0.8"
                   Text="{Binding CurrentUser.Post, Source={StaticResource CurrentUser}}"/>
                    </StackPanel>
                </Border>
                <!-- Скрыть весь бейдж, если юзера нет -->
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentUser, Source={StaticResource CurrentUser}}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
            </StackPanel>

            <!-- ЦЕНТР: Кнопки навигации (строго по центру окна) -->
            <StackPanel Grid.Column="2" Orientation="Horizontal"
              VerticalAlignment="Center" HorizontalAlignment="Center">
                <RadioButton GroupName="Nav" Style="{StaticResource NavTab}"
                 Content="Главный экран" IsChecked="True"
                 Command="{Binding NavigateHomeCommand}" />
                <RadioButton GroupName="Nav" Style="{StaticResource NavTab}"
                 Content="Отчёты" Margin="40,0,0,0"
                 Command="{Binding NavigateReportsCommand}" />
            </StackPanel>

            <!-- ПРАВО: Логотип компании в правом верхнем углу -->
            <Image Grid.Column="3" Source="/Docs/Images/MacPromLogo.png"
                   HorizontalAlignment="Right" VerticalAlignment="Top"
                   Margin="0,-12,20,0" Height="79" Grid.ColumnSpan="3" Width="142"/>
        </Grid>

        <Border Grid.Row="1"
                Height="1"
                VerticalAlignment="Bottom"
                Background="#CECECE"            
                SnapsToDevicePixels="True" Margin="15 10 15 0"/>
    </Grid>
</UserControl>
